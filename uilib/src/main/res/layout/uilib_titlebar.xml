<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="48dp">

    <!-- 左侧返回按钮 -->
    <ImageView
            android:paddingTop="4dp"
            android:id="@+id/iv_back"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="-5dp"
            android:src="@drawable/uilib_titlebar_back_icon"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_back"
            android:id="@+id/tv_left"
            android:visibility="gone"
            android:textSize="@dimen/uilib_app_text_size_first_level"/>


    <TextView
            android:id="@+id/tv_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/uilib_app_text_size_first_level"
            android:textColor="@color/uilib_title_bar_text_color"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center"/>


    <!-- 右侧的图片 -->
    <ImageView
            android:id="@+id/iv_right"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
    />

    <!-- 右侧的文本 -->
    <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="@dimen/uilib_app_text_size_second_level"
            android:textColor="@color/uilib_title_bar_text_color"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
    />

</merge>